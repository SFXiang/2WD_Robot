<launch>
  <!-- move_base -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="laser_topic" default="scan" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <!--<param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />-->

    <rosparam file="$(find hcr_nav)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find hcr_nav)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find hcr_nav)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find hcr_nav)/param/global_costmap_params.yaml" command="load" />
    
    <rosparam file="$(find hcr_nav)/param/move_base_params.yaml" command="load" />

    <rosparam file="$(find hcr_nav)/param/dwa_local_planner_params.yaml" command="load" />
    <!--<rosparam file="$(find hcr_nav)/param/base_local_planner_params.yaml" command="load" />-->

    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="scan" to="$(arg laser_topic)"/>
  </node>
</launch>
